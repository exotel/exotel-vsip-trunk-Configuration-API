              "    pm.expect(responseJson.response[0].status).to.eql(\"success\");",
              "});",
              "",
              "// Validate alias data",
              "if (responseJson.response && responseJson.response[0] && responseJson.response[0].status === \"success\") {",
              "    const aliasData = responseJson.response[0].data;",
