              "    ",
              "    pm.test(\"Trunk alias data is valid\", function () {",
              "        pm.expect(aliasData.name).to.eql(\"trunk_external_alias\");",
              "        pm.expect(aliasData.value).to.be.a(\"string\");",
              "        pm.expect(aliasData.trunk_sid).to.be.a(\"string\");",
              "    });",
              "} else {",
