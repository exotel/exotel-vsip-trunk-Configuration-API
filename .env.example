# Exotel SIP Trunking API Configuration
# Copy this file to .env and fill in your values

# Authentication
EXO_AUTH_KEY=your_api_key
EXO_AUTH_TOKEN=your_api_token

# Account
EXO_ACCOUNT_SID=your_account_sid
EXO_SUBSCRIBIX_DOMAIN=api.in.exotel.com

# Trunk (set after creating trunk)
TRUNK_SID=your_trunk_sid

# Phone Number Mapping
DID_NUMBER=+919876543210
MODE=pstn

# For Update Phone Number
PHONE_NUMBER_ID=your_phone_number_id
PHONE_NUMBER=+919876543210

# IP Whitelist
WHITELIST_IP=your_server_ip
WHITELIST_MASK=32

# Destination URI (for inbound)
TRUNK_DEST_IP=your_server_ip
TRUNK_DEST_PORT=5061
TRANSPORT=tls

# Trunk Alias
EXOPHONE=+919876543210
